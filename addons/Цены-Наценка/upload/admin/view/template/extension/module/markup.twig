{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">

            <!-- Кнопки управления -->
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>

            <!-- Название модуля -->
            <h1>{{ heading_title }}</h1>

            <!-- Хлебные крошки -->
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>

        </div>
    </div>

    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">

                    <!-- Настройка: "Статус" -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">

                            <select name="markup_status" id="input-status" class="form-control">
                                {% if markup_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>

                        </div>
                    </div>

                
                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-price">{{ text_price_title }}</label>
                    <div class="col-sm-10">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>{{ text_price_retail }}</th>
                                <th>{{ text_price_box }}</th>
                                <th>{{ text_price_wholesale }}</th>
                            </tr>
                            <tr>
                                <td>
                                    <div class="input-group" style="width: 100%; float: left;">
                                        <span class="input-group-addon">+</span>
                                        <input class="form-control" id="sp_to" name="markup_price1" value="{{ markup_price1 }}" placeholder="{{ text_price }}" type="text">
                                        <span class="input-group-addon">%</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group" style="width: 100%; float: left;">
                                        <span class="input-group-addon">+</span>
                                        <input class="form-control" id="sp_to-1" name="markup_price2" value="{{ markup_price2 }}" placeholder="{{ text_price }}" type="text">
                                        <span class="input-group-addon">%</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="input-group" style="width: 100%; float: left;">
                                        <span class="input-group-addon">+</span>
                                        <input class="form-control" id="sp_to-2" name="markup_price3" value="{{ markup_price3 }}" placeholder="{{ text_price }}" type="text">
                                        <span class="input-group-addon">%</span>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <!--div class="custum-send-ajax-btn" id="calculate_ajax" data-toggle="tooltip" title="" data-original-title="{{ text_recount }}">
                            <button>{{ text_recount }}</button>
                        </div-->
                    </div>
                </div>

                    <div class="form-group" style="display: none;">
                        <label class="col-sm-2 control-label" for="241242">Количество в упаковке</label>
                        <div class="col-sm-10">
                              <div class="input-group" style="width: 100%; float: left;">
                                <!--input class="form-control" id="241242" name="markup_minimum_pak" value="{{ markup_minimum_pak }}" placeholder="10" type="text"-->
                                <input class="form-control" id="241242" name="markup_minimum_pak" value="1" placeholder="10" type="text">
                            </div>
                        </div>
                    </div>


               <div class="form-group">
                    <label class="col-sm-2 control-label" for="markup_currency_id-class">Валюта</label>
                    <div class="col-sm-10">
                        <select name="markup_currency_id" id="currency_id-class" class="form-control">
                            {% for currency in currencies %}
                                {% if currency.currency_id == markup_currency_id %}

                                    <option value="{{ currency.currency_id }}" selected="selected">{{ currency.title }}</option>

                                {% else %}

                                    <option value="{{ currency.currency_id }}">{{ currency.title }}</option>

                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
    

                  <div class="form-group">
                        <label class="col-sm-2 control-label" for="241241">{{ text_price_wholesale }}</label>
                        <div class="col-sm-10">
                            <div class="text">
                                <p>{{ text_wholesale }}</p>
                            </div>
                            <div class="input-group" style="width: 100%; float: left;">
                                <input class="form-control" id="241241" name="markup_minimum_sum" value="{{ markup_minimum_sum }}" placeholder="10000" type="text">
                            </div>
                        </div>
                    </div>

              <div class="form-group">
                    <label class="col-sm-2 control-label" for="markup_customer_group_id-class">Отображать оптовые цены</label>
                    <div class="col-sm-10">
                        <select name="markup_customer_group_id" id="markup_customer_group_id-class" class="form-control">
                            {% for customer_group in customer_groups %}
                                {% if customer_group.customer_group_id == markup_customer_group_id %}

                                    <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>

                                {% else %}

                                    <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>

                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
  

                </form>

            </div>
        </div>
    </div>
</div>
{{ footer }}
